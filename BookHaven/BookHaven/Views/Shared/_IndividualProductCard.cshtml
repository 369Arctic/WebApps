@model BookHaven_Models.Product

<div class="filter @Model.Category.Name.Replace(' ', '_') p-2">
    <!-- Card -->
    <div class="card border-1 p-3 shadow border-top border-5 rounded h-100 d-flex flex-column" style="width: 25rem;">
        <img src="@Model.ImageURL" class="card-img-top rounded" style="object-fit: cover; height: auto; width: auto"></img>
        <div class="card-body d-flex flex-column flex-grow-1">
            <div class="flex-grow-1">
                <p class="card-title h5 text-dark opacity-100 text-uppercase text-center">@Model.Name</p>
                <p class="card-title text-warning text-center">by <b>@Model.Author</b> </p>
            </div>
            <div>
                <p class="text-dark text-opacity-75 text-center">As low as:<span>@Model.Price50.ToString("c")</span></p>
            </div>
            <div>
                <p class="text-dark text-center">Category: <b>@Model.Category.Name</b></p>
            </div>
        </div>
        <div>
            <a asp-action="Details" asp-route-productId="@Model.Id" class="btn btn-primary bg-gradient border-0 form-control">
                Details
            </a>
        </div>
    </div>
</div>
