@page
@model BookHavenRazorPage.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4 pb-5">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>

        <div class="col-6 text-end">
            <a asp-page="/Categories/Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i>  Create New Category
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.CategoryList.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>@category.DisplayOrder</td>
                    <td>
                        <div class="w-100 btn-group" role="group">
                            <a asp-page="/Categories/Edit" asp-route-id="@category.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-arrow-clockwise"></i> Edit Category
                            </a>
                            <a asp-page="/Categories/Delete" asp-route-id="@category.Id" class="btn btn-danger mx-2">
                                @* mx отвечает за отдаление кнопок друг от друга *@
                                <i class="bi bi-trash"></i> Delete Category
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>